<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emotionwave.widgetdemoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WidgetDemoApp">
        <activity android:name=".ExtraActivity"></activity>
        <activity android:name=".ChronometerActivity" />
        <activity android:name=".DatePickerAndStopWatchActivity" />
        <activity android:name=".DatesAndClockActivity" />
        <activity android:name=".AdvancedWidgetActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>